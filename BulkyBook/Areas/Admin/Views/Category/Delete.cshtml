@model Category


<form method="post" asp-action="Delete">

    <input hidden asp-for="Id"/>
    <div class="p-3">
        <div class="row p-4">
            <h2>Delete Category</h2>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly/>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" class="form-control" readonly/>
    </div>

    <div class="mb-3">
       <button style="width:150px" type="submit" class="btn btn-danger">
           Delete
       </button>
       <a style="width:150px" asp-controller="Category" asp-action="Index" class="btn btn-secondary">
           Back to List
       </a>
    </div>


</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
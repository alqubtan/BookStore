@model IEnumerable<CoverType>


@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">

    <div class="row p-4">
        <div class="col-6">
            <h2>Cover Types List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
              <i class="bi bi-plus-square"></i> &nbsp; Create New Cover Type
            </a>
        </div>
    </div>
    <br /> <br /> <br />
    <table class= "table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach(var coverType in Model)
            {
                <tr>
                    <td width=40%>@coverType.Name</td>
                     <td>
                         <div class="w-75 btn-group" role="group">
                             <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@coverType.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> &nbsp; Edit
                             </a>
                             <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@coverType.Id" class="btn btn-danger mx-2">
                                 <i class="bi bi-trash"></i> &nbsp; Delete
                             </a>
                         </div>
                     </td>
                 
                </tr>
            }
        </tbody>
   </table>

</div>
